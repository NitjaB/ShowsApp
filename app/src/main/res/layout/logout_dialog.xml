<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePictureImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="40dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerRadius"
        app:srcCompat="@drawable/ic_profile_picture"
        app:strokeColor="@color/purple"
        app:strokeWidth="2dp"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="24sp"
        android:fontFamily="@font/font_roboto_medium"
        android:maxLines="3"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeProfilePictureButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="@string/change_profile_picture_button"
        android:textAllCaps="false"
        android:textColor="@color/purple"
        android:textSize="17sp"
        android:fontFamily="@font/font_roboto_bold"
        android:letterSpacing="0"
        android:paddingVertical="10dp"
        app:cornerRadius="25dp"
        app:strokeColor="@color/purple"
        app:strokeWidth="2dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:letterSpacing="0"
        android:text="@string/logout_button"
        android:textColor="@color/white"
        android:fontFamily="@font/font_roboto_bold"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple"
        app:cornerRadius="24dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>